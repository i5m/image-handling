{
	"name": "Covid",
	"description": "A tool to help color vision deficient to see",
	"version": "1.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "src/background.js"
	},
	"permissions": [
		"storage",
		"activeTab",
		"contentSettings",
		"scripting",
		"declarativeNetRequest",
		"declarativeNetRequestWithHostAccess"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"src/content.js",
				"images/*.png"
			],
			"matches": [
				"<all_urls>"
			],
			"use_dynamic_url": true
		}
	],
	"icons": {
		"16": "images/light.png",
		"48": "images/light.png",
		"128": "images/light.png"
	},
	"host_permissions": [
		"<all_urls>"
	],
	"action": {
		"default_popup": "src/pop.html",
		"default_icon": {
			"16": "images/light.png",
			"32": "images/light.png",
			"48": "images/light.png",
			"128": "images/light.png"
		}
	}
}